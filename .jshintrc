/**
 * JSHint Options: http://www.jshint.com/docs/options/
 * Based on https://github.com/airbnb/javascript - Thanks AirBnB!
 */

{
  /*
   * ENVIRONMENTS
   * =================
   */

  // Define globals exposed by modern browsers.
  "browser": true,

  // Define globals exposed by jQuery.
  "jquery": true,

  // Define globals exposed by Node.js.
  "node": true,

  /*
   * ENFORCING OPTIONS
   * =================
   */

  // Disable the use of bitwise operators.
  "bitwise": true,

  // Force all variable names to use either camelCase style or UPPER_CASE
  // with underscores.
  "camelcase": true,

  // Force the use of curly braces around blocks in loops and conditionals.
  "curly": true,

  // Prohibit use of == and != in favor of === and !==.
  "eqeqeq": true,

  // Suppress warnings about == null comparisons.
  "eqnull": true,

  // Prohibit use of immediate function invocations without wrapping parantheses.
  "immed": true,

  // Enforce tab width of 2 spaces.
  "indent": 2,

  // Prohibit use of a variable before it is defined.
  "latedef": true,

  // Enforce line length to 180 characters.
  "maxlen": 180,

  // Require capitalized names for constructor functions.
  "newcap": true,

  // Prohibit use of arguments.caller and arguments.callee.
  "noarg": true,

  // Prohibit the use of constructor functions for side-effects.
  "nonew": true,

  // Enforce use of single quotation marks for strings.
  "quotmark": "single",

  // Enforce placing 'use strict' at the top function scope.
  "strict": true,

  // Prohibit trailing whitespace.
  "trailing": true,

  // Prohibit use of explicitly undeclared variables.
  "undef": true,

  // Warn when variables are defined but never used.
  "unused": true,

  // Globals that exist in our system that don't need a new definition
  "globals": {
    "angular": false,
    "_": true,
    "document": false,
    "configuration": true,
    "numeral": false,
    "require": false,
    "server": true,
    "sprintf": false,
    "Promise": true
  }
}
